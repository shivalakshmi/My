<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/page_number"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/timer"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/tech_report"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radio_group_leakageOil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                     />

                <RadioButton
                    android:id="@+id/cross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                     />

            </RadioGroup>

            <!-- <RadioButton android:id="@+id/radioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New RadioButton" /> <RadioButton android:id="@+id/radioButton2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/radioButton" android:layout_toEndOf="@+id/radioButton" android:text="New RadioButton" />-->


            <TextView
                android:id="@+id/txtWiperLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/radio_group_leakageOil"
                android:text="@string/leakage_engineoil"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radio_group_leakageSteeringOil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdWipertick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                     />

                <RadioButton
                    android:id="@+id/rdWipercross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                     />

            </RadioGroup>

            <TextView
                android:id="@+id/txtRightWiper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/radio_group_leakageSteeringOil"
                android:text="@string/leakage_steeringoil"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radio_group_tempcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdHeadLighttick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                     />

                <RadioButton
                    android:id="@+id/rdHeadlightcross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                     />

            </RadioGroup>

            <TextView
                android:id="@+id/txt_HeadLightLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/radio_group_tempcheck"
                android:text="@string/temp_check"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout3"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radio_group_leakageDieselTank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdRHeadLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                     />

                <RadioButton
                    android:id="@+id/rdRHeadlightcross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                     />

            </RadioGroup>

            <TextView
                android:id="@+id/txtRheadlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/radio_group_leakageDieselTank"
                android:text="@string/leakage_diesel_tank"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout4"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radio_group_collantLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdLslidetick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                     />

                <RadioButton
                    android:id="@+id/rdLslidecross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                     />

            </RadioGroup>

            <TextView
                android:id="@+id/txtLslide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/radio_group_collantLevel"
                android:text="@string/coolant_level"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout5"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/radio_group_visualInspection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/txtRslidetick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                     />

                <RadioButton
                    android:id="@+id/rdRslidecross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                     />

            </RadioGroup>

            <TextView
                android:id="@+id/txtRslide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/radio_group_visualInspection"
                android:text="@string/visual_inspection"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>


