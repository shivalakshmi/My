<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="8"
              android:layout_marginTop="@dimen/common_padding_small0">

    <TextView
        android:id="@+id/vehicle_no"
        style="@style/TextViewHeaderStyle"
        android:layout_width="0dp"
        android:drawableStart="@drawable/ic_arrow_right"
        android:drawablePadding="1dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/common_padding_smal09"
        android:layout_weight="1.1"
        android:tag="1"
        android:background="@drawable/header_selector"
        android:text="@string/vehicle_number"/>
    <TextView
        android:id="@+id/client"
        style="@style/TextViewHeaderStyle"
        android:layout_width="0dp"
        android:drawableStart="@drawable/ic_arrow_right"
        android:drawablePadding="1dp"
        android:layout_marginEnd="@dimen/common_padding_smal09"
        android:layout_height="match_parent"
        android:background="@drawable/header_selector"
        android:layout_weight="0.7"
        android:tag="1"
        android:text="@string/client"/>
    <TextView
        android:id="@+id/vehicle_route"
        style="@style/TextViewHeaderStyle"
        android:layout_width="0dp"
        android:drawableStart="@drawable/ic_arrow_right"
        android:drawablePadding="1dp"
        android:layout_marginEnd="@dimen/common_padding_smal09"
        android:layout_height="match_parent"
        android:background="@drawable/header_selector"
        android:layout_weight="1.35"
        android:tag="1"
        android:text="@string/vehicle_route"/>

    <TextView
        android:id="@+id/eta"
        style="@style/TextViewHeaderStyle"
        android:layout_width="0dp"
        android:drawableStart="@drawable/ic_arrow_right"
        android:drawablePadding="1dp"
        android:layout_marginEnd="@dimen/common_padding_smal09"
        android:tag="1"
        android:background="@drawable/header_selector"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/eta"/>

    <TextView
        android:id="@+id/assign_pilot"
        style="@style/TextViewHeaderStyle"
        android:layout_width="0dp"
        android:tag="1"
        android:drawableStart="@drawable/ic_arrow_right"
        android:drawablePadding="1dp"
        android:layout_marginEnd="@dimen/common_padding_smal09"
        android:background="@drawable/header_selector"
        android:layout_height="match_parent"
        android:layout_weight="1.15"
        android:text="@string/assigned_pilots"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/color_primary_light"
        android:layout_marginEnd="@dimen/common_padding_smal09"
        android:layout_weight="1">

        <TextView
            style="@style/TextViewHeaderStyle"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/pilot_in_hub"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/color_primary_light"
        android:layout_marginEnd="@dimen/common_padding_smal09"
        android:layout_weight="1">

        <TextView
            style="@style/TextViewHeaderStyle"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/vehicle_in_hub"/>
    </LinearLayout>

    <TextView
        style="@style/TextViewHeaderStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:text="@string/checklist"/>

</LinearLayout>
