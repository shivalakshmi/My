<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/page_number"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/timer"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Changeover Complete"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal">

            <RadioGroup
                android:id="@+id/radioBtnGroup_driver_onboard_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- <RadioButton
                     android:id="@+id/radioBtn_driver_onboard_ok"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="false"

                     android:text="ok" />

                 <RadioButton
                     android:id="@+id/radioBtn_driver_onboard_notok"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBottom="@+id/radioBtn_driver_onboard_ok"
                     android:layout_toEndOf="@+id/radioBtn_driver_onboard_ok"
                     android:checked="false"
                     android:text="Not ok" />-->

                <RadioButton
                    android:id="@+id/radioBtn_driver_onboard_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                     />

                <RadioButton
                    android:id="@+id/radioBtn_driver_onboard_notok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                     />

            </RadioGroup>

            <TextView
                android:id="@+id/textView71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/radioBtnGroup_driver_onboard_ok"
                android:layout_marginStart="57dp"
                android:layout_toEndOf="@+id/radioBtnGroup_driver_onboard_ok"
                android:text="@string/changeover_complete_driver_onboard"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/top_layout"
            android:layout_centerInParent="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <RadioGroup
                android:id="@+id/radioBtnGroup_truck_ready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtn_truck_ready_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                     />

                <RadioButton
                    android:id="@+id/radioBtn_truck_ready_notok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                     />


            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/radioBtnGroup_truck_ready"
                android:layout_marginStart="57dp"
                android:layout_toEndOf="@+id/radioBtnGroup_truck_ready"
                android:text="@string/changeover_complete_truck_mov"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:gravity="bottom|end">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/button_roundcorner"
            android:text="@string/save"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>