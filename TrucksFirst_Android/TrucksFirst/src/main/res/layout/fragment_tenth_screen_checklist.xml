<?xml version="1.0"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/final_approvalscreen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHeaderName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/missingvalues"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/relative_dropdown_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/dropdown_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headingText"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <Spinner
                android:id="@+id/sp_mechnical_clutch"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />

            <Spinner
                android:id="@+id/sp_tyre"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/sp_mechnical_clutch" />

            <Spinner
                android:id="@+id/sp_electrical"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/sp_tyre" />

            <Spinner
                android:id="@+id/sp_engine"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/sp_electrical"
                android:entries="@array/Engine_issues_array" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:visibility="visible">

            <TextView
                android:id="@+id/head1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="Mechanical"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/head2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/head1"
                android:text="Tyre/oil"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/head3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/head2"
                android:text="Electrical"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/head4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/head3"
                android:entries="@array/Engine_issues_array"
                android:text="Engine"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

    </RelativeLayout>

