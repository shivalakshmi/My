    <!-- <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/checklist_item" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/textView2" android:layout_marginStart="120dp" />-->


    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_roundcorner"
        android:text="@string/chk_next"
        android:textColor="#ffffff" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/txtHeader"
        android:text="10s"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtHeader"
        android:layout_alignEnd="@+id/lay_main_layout"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="70dp"
        android:text="10s"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtHeaderName"
        android:layout_marginLeft="20dp"
        android:text="10/11"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout><!---->