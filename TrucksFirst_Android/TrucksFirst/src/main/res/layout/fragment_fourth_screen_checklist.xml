<?xml version="1.0"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/client_docs"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/lay_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtHeader"
        android:layout_marginStart="200dp"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">



            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/cross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                    android:textSize="15sp" />

            </RadioGroup>

            <!-- <RadioButton android:id="@+id/radioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New RadioButton" /> <RadioButton android:id="@+id/radioButton2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/radioButton" android:layout_toEndOf="@+id/radioButton" android:text="New RadioButton" />-->


            <TextView
                android:id="@+id/txtWiperLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="180dp"
                android:layout_toEndOf="@+id/radio_group"
                android:text="@string/manifest"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:orientation="horizontal">



            <RadioGroup
                android:id="@+id/radio_wipergroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdWipertick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdWipercross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                    android:textSize="15sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/txtRightWiper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="180dp"
                android:layout_toEndOf="@+id/radio_wipergroup"
                android:text="@string/lr"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:orientation="horizontal">



            <RadioGroup
                android:id="@+id/radio_Headlightgroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdHeadLighttick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/applicable"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdHeadlightcross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_applicable"
                    android:textSize="15sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/txt_HeadLightLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_toEndOf="@+id/radio_Headlightgroup1"
                android:text="@string/tp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/layout3"
            android:orientation="horizontal">



            <RadioGroup
                android:id="@+id/radio_Headlightgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdRHeadLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdRHeadlightcross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                    android:textSize="15sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/txtRheadlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_toEndOf="@+id/radio_Headlightgroup"
                android:text="@string/docs_available"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout4"
            android:orientation="horizontal">



            <RadioGroup
                android:id="@+id/radio_Lslidegroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdLslidetick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/ok"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdLslidecross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/not_ok"
                    android:textSize="15sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/txtLslide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_toEndOf="@+id/radio_Lslidegroup"
                android:text="@string/document_driver"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>





    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/txtHeader"
        android:text="10s"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtHeader"
        android:layout_marginEnd="59dp"
        android:text="10s"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_roundcorner"
        android:text="@string/chk_next"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4/11"
        android:id="@+id/textView5"
        android:layout_above="@+id/lay_main_layout"
        android:layout_marginLeft="20dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>