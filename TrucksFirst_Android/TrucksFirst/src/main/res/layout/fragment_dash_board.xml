<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.fissionlabs.trucksfirst.fragments.TFDashBoardFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/dash_board"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/lastlogin_location_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:layout_alignParentBottom="true"
        tools:ignore="RtlSymmetry">
        <TextView
            android:id="@+id/last_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            style="@style/TextViewStyle"
            android:drawableStart="@drawable/ic_lastlogin"
            android:text="@string/last_login"/>
        <LinearLayout
            android:id="@+id/fetch_location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/fetch_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/fetch_location"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingStart="10dp"
                style="@style/TextViewStyle"
                android:text="@string/fetch_location"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
