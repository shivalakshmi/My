<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/page_number"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/timer"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/page_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvChecklistItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="@string/checklist_item"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radio_group_wiperL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbWiperLOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/ok"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbWiperLNotOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/not_ok"
                        android:textSize="15sp" />

                </RadioGroup>


                <TextView
                    android:id="@+id/tvWiperL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/radio_group_wiperL"
                    android:text="@string/chkLeft_wiper"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radio_group_wiperR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbWiperROk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/ok"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbWiperRNotOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/not_ok"
                        android:textSize="15sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvWiperR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/radio_group_wiperR"
                    android:text="@string/chkRight_wiper"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radio_group_headlightL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbHeadLightLOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/ok"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbHeadLightLNotOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/not_ok"
                        android:textSize="15sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvHeadLightL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"

                    android:layout_toEndOf="@+id/radio_group_headlightL"
                    android:text="@string/chk_Lheadlight"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radio_group_headlightR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbHeadLightROk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/ok"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbHeadLightRNotOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/not_ok"
                        android:textSize="15sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvHeadLightR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/radio_group_headlightR"
                    android:text="@string/chk_Rheadlight"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radio_group_side_indicatorL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSideIndicatorLOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/ok"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbSideIndicatorLNotOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/not_ok"
                        android:textSize="15sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvSideIndicatorL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/radio_group_side_indicatorL"
                    android:text="@string/chk_Lslide"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radio_group_side_indicatorR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSideIndicatorROk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/ok"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbSideIndicatorRNotOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/not_ok"
                        android:textSize="15sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvSideIndicatorR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/radio_group_side_indicatorR"
                    android:text="@string/chk_Rslide"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout6"

                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radio_group_brack_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdBrakelighttick1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/ok"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rdBrakelightcross1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/not_ok"
                        android:textSize="15sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvBrakeLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/radio_group_brack_light"
                    android:text="@string/chk_brakelight"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radio_group_horn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbHornOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/ok"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbHornNotOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/not_ok"
                        android:textSize="15sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tvHorn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/radio_group_horn"
                    android:text="@string/chk_horn"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_roundcorner"
            android:text="@string/chk_next"
            android:textColor="#ffffff" />
    </LinearLayout>


</LinearLayout>