<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primary"
    android:minHeight="30dp"
    android:weightSum="4"
    android:layout_marginTop="1dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/vehicle_count"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_count"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/drivers_planned"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/drivers_planned"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/drivers_not_planned"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/drivers_not_planned"
        android:textSize="17sp"
        android:textColor="@android:color/white"  />

    <TextView
        android:id="@+id/last_updated_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="@string/last_updated_time"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@android:color/white" />

</LinearLayout>