<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff1e1e1e" />
            <gradient android:angle="-90" android:startColor="#ff1e1e1e" android:endColor="#ff1e1e1e"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff1e1e1e" />
            <solid android:color="#ff1e1e1e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff666666" />
            <gradient android:angle="-90" android:startColor="#ff666666" android:endColor="#ff666666" />
        </shape>
    </item>
</selector>