<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EF6C36" />
            <gradient android:angle="-90" android:startColor="#ef7b36" android:endColor="#ef7b36"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EF6C36" />
            <solid android:color="#ef7b36"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EF6C36" />
            <gradient android:angle="-90" android:startColor="#EF6C36" android:endColor="#EF6C36" />
        </shape>
    </item>
</selector>