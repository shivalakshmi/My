<resources>

    <style name="Theme.Design" parent="Base.Theme.Design">
    </style>

    <style name="Base.Theme.Design" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_roundcorner</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextViewStyle2">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TextViewHeaderStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_primary_light</item>
        <item name="android:padding">@dimen/common_padding_small3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewSecondHeaderStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/common_padding_small3</item>
        <item name="android:paddingBottom">@dimen/common_padding_small3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextViewChecklistHeaderStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_primary_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
